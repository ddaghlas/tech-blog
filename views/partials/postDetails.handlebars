<!-- Post Details -->
<div class="row mb-4 post">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header card-header-link">
                <div class="row">
                    <a href="/post/{{id}}" data-post_id="{{id}}" class="col text-start">
                        <h2>
                            {{title}}
                        </h2>
                    </a>
                    <div class="col text-end">
                        Posted by {{author.username}} on {{format_date date}}
                    </div>
                </div>
            </div>
            <div class="card-body">
                <p class="card-text">{{content}}</p>
            </div>
        </div>
    </div>
</div>