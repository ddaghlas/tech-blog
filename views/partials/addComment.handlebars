<!-- New comments page... Handles post data by id -->
<div class="row mb-4 post">
  <div class="col-md-12">
    <div class="card">
      <div class="card-header">
        <div class="row">
            <h2> &nbsp; </h2>
          </div>
        </div>
        <div class="card-body">
          <form class="new-comment-form" data-post-id="{{id}}">
            <div class="mb-3">
              <label for="comment" class="form-label">Comment</label>
              <textarea class="form-control" rows="3" id="comment"></textarea>
            </div>
              <button type="submit" class="block btn btn-primary add-comment-btn">Submit</button>
          </form>
          </div>
        </div>
    </div>
</div>

<script src="/js/addComment.js"></script>